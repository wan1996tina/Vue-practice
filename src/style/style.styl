$font = '標楷體'
$bg1 = url('../assets/0401.jpg')
$bg2 = url('../assets/0402.jpg')

#app
    width 1024px
    height 768px
    margin auto

    #top
        width 1024px
        height 120px
        background-image $bg1
        color #ffffff
        text-align center
        font-family $font
        font-size 52px
        text-shadow 10px 10px 15px #333333
        line-height 120px

#Marquee
    width 100%
    height 30px
    line-height 30px
    background-image $bg2
    color: #00f
    font-size 19px
    font-family $font

#Content
    background-image $bg2
    table
      margin auto
    tr
      height 150px
    td
      vertical-align middle
      border 1px solid #555
      text-align center
      &:first-child
          width 200px
      &:not(:first-child)
        width 300px
      img
        height 150px

#Footer
  width 100%
  height 78px
  color #ffffff
  font-family $font
  line-height 200%
  text-align left
  background-color #660
